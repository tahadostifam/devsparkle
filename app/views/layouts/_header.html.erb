<div id="header">
	<%= link_to raw("<h1 id='brand'>devsparkle</h1>"), root_path %>
	
	<div id="navbar" class="navbar">
		<div id="navbar-right">
			<% unless session[:user].present? %>
				<%= active_link_to "ثبت نام", users_signup_path, :class => "btn btn-secondary" %>
				<%= active_link_to "ورود", users_signin_path, :class => "btn btn-secondary" %>
			<% else %>
				<div class="dropdown" style="display: inline-block">
					<div class="button">
						<div class="inline_avatar">
							<div class="avatar">
								<%= session[:user]['full_name'][0] %>
							</div>
							<span class="value">
								<%= session[:user]['full_name'] %>
								<% if session[:user]['is_owner'] %>
								(موسس)
								<% elsif session[:user]['is_admin'] %>
								(ادمین)
								<% end %>
							</span>
						</div>
					</div>
					<div class="content">
						<%= active_link_to 'ناحیه کاربری', dashboard_edit_profile_url, :class => "item" %>
						<%= active_link_to 'خروج از حساب کاربری', users_logout_url, :class => "item" %>
					</div>
				</div>
			<% end %>
			<% if session[:user].present? %>
				<% if  session[:user][:is_owner] || session[:user][:is_admin]%>
					<a href="<%= dashboard_new_article_url %>" style="display: inline-block; margin-right: 10px; font-size: 30px; position: relative; top: 10px; height: 34px; cursor: pointer" class="btn-none">
						<ion-icon style="color: #dadada;" name="add-outline"></ion-icon>
					</a>
				<% end %>
			<% end %>
		</div>
		<div id="navbar-left">
			<%= active_link_to 'درباره ما', about_us_path, :class => "btn btn-secondary" %>
			<%= active_link_to 'مقالات', articles_index_path, :class => "btn btn-secondary" %>
			<a class="btn btn-secondary btn-mute"><del>دوره ها</del></a>
		</div>
	</div>
</div>

<div id="bottom_navigator">
	<div id="bottom_navigator_nav">
		<a>
			<div class="item">
				<div class="icon">
					<ion-icon name="school-outline"></ion-icon>
				</div>
				<span class="text">
					<del>دوره ها</del>
				</span>
			</div>
		</a>
		<%= active_link_to raw('
		<div class="item">
			<div class="icon">
				<ion-icon name="document-text-outline"></ion-icon>
			</div>
			<span class="text">
				مقالات
			</span>
		</div>
		'), articles_index_path %>
		<% if session[:user].present? %>
			<% if  session[:user][:is_owner] || session[:user][:is_admin]%>
				<%= active_link_to raw('
				<div class="item item-center">
					<div class="icon">
						<ion-icon name="add-outline"></ion-icon>
					</div>
				</div>
				'), dashboard_new_article_url %>
			<% end %>
		<% end %>
		<%= active_link_to raw('
		<div class="item">
			<div class="icon">
				<ion-icon name="information-outline"></ion-icon>
			</div>
			<span class="text">
				درباره ما
			</span>
		</div>
		'), about_us_path %>
		<% unless session[:user].present? %>
			<%= active_link_to raw('
			<div class="item">
				<div class="icon">
					<ion-icon name="person-outline"></ion-icon>
				</div>
				<span class="text">
					ورود
				</span>
			</div>
			'), users_signin_path %>
		<% else %>
			<%= active_link_to raw('
			<div class="item">
				<div class="icon">
					<ion-icon name="file-tray-stacked-outline"></ion-icon>
				</div>
				<span class="text">
					ناحیه کاربری
				</span>
			</div>
			'), dashboard_edit_profile_url %>
		<% end %>
	</div>
</div>