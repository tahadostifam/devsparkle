<% unless flash[:site_settings_success].nil? %>
    <div class="alert alert-success" style="margin-bottom: 20px; display: block">
        <button onclick="close_popup_alert_box(this)" class="close_button btn-none">
            <ion-icon name="close-outline"></ion-icon>
        </button>
        <div class="alert_content">
            <%= flash[:site_settings_success] %>
        </div>
    </div>        
<% end %>

<div class="content_box">
    <%= form_with model: @setting, url: {:action => :submit_site_settings} , method: :post do |f|%>
        <div class="form">
            <div class="input">
                <%= f.label :about_us, 'محتوای درباره ما' %>
                <%= f.text_area :about_us, :style => 'height: 300px', :rows => 600, :dir => :rtl %>
            </div>

            <div class="input">
                 <%= f.label :tac, 'قوانین و مقررات' %>
                <%= f.text_area :tac, :style => 'height: 300px', :rows => 600, :dir => :rtl %>
            </div>

            <label class="checkbox">امکان نظر دهی برای مقالات
                <%= f.check_box :can_comment %>
                <span class="checkmark"></span>
            </label>

            <div style="margin-top: 10px;">
                <% unless flash[:site_settings_errors].nil? %>
                    <% flash[:site_settings_errors].each do |e| %>
                        <div class="form_error_list">
                            <div class="item"><%= e %></div>
                        </div>
                    <% end %>
                <% end %>
            </div>

            <div style="width: 100%; display: block; text-align: left;">
                <%= f.submit 'ثبت تنظیمات', :class => "btn btn-danger btn-large-padding" %>
            </div>
        </div>
    <% end %>
</div>